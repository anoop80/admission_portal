    function check(){
        if(document.getElementById("id_email").value == "")
        {
            alert("Email Id Field should not be left blank");
            document.getElementById("id_email").focus();
            return;

        }

        if(document.getElementById("id_email").value.indexOf('@') === -1 || document.getElementById("id_email").value.indexOf('.') === -1 ||(document.getElementById("id_email").value.indexOf('@')  > document.getElementById("id_email").value.indexOf('.')))
        {
            alert("Enter valid email id");
            document.getElementById("id_email").focus();
            return;

        }
        if(document.getElementById("id_password").value == "")
        {
            alert("password Field should not be left blank");
            document.getElementById("id_password").focus();
            return;

        }
        console.log("helo12");
        if( document.getElementById("name").value == "" )
        {
            alert("Any Field should not be left blank");
            document.getElementById("name").focus();
            return;
        }
        if( document.getElementById("mother").value == "" )
        {
            alert("Any Field should not be left blank");
            document.getElementById("mother").focus();
            return;
        }
        if( document.getElementById("father").value == "" )
        {
            alert("Any Field should not be left blank")
            document.getElementById("father").focus();
            return;
        }
        if( document.getElementById("dob").value == "" )
        {
            alert("Any Field should not be left blank")
            document.getElementById("dob").focus();
            return;
        }
        if(document.getElementById("dob").value.indexOf('-') === -1)
        {
            alert("Enter Date of Birth in valid format");
            document.getElementById("dob").focus();
            return;

        }
    }

    function workshow(){

        var r1 = document.getElementById("wey");
        var wdata = document.getElementById("wdata");
        // console.log(r1.checked);
        if(r1.checked)
            wdata.style.display = "block";
        else
            wdata.style.display = "none";
    }
    workshow();
    function pubshow(){

        var r1 = document.getElementById("pry");
        var wdata = document.getElementById("pubdata");
        // console.log(r1.checked);
        if(r1.checked)
            wdata.style.display = "block";
        else
            wdata.style.display = "none";
    }
    pubshow();
    
    function reload()
    {
        document.getElementById("save1").click();
        //console.log(request.POST);
    }
    function examinationChange()
    {

        if(document.phdform.gatestatus.value=="GATE/GPAT Exempted")
        {

            document.getElementById('check2').style.display = "none";
            document.getElementById('check3').style.display = "none";
            document.getElementById('check4').style.display = "none";

        }
        else if(document.phdform.gatestatus.value=="Sponsored")
        {

            document.getElementById('check2').style.display = "none";
            document.getElementById('check3').style.display = "none";
            document.getElementById('check4').style.display = "none";
        }
        else if(document.phdform.gatestatus.value=="Gate/GPAT Qualified")
        {
            document.getElementById('check2').style.display = "block";
            document.getElementById('check3').style.display = "none";
            document.getElementById('check4').style.display = "none";
        }
        else if(document.phdform.gatestatus.value=="UGC-CSIR-NET Qualified")
        {
            document.getElementById('check2').style.display = "none";
            document.getElementById('check3').style.display = "block";
            document.getElementById('check4').style.display = "none";
        }
        else if(document.phdform.gatestatus.value=="Other External Fellowships")
        {
            document.getElementById('check2').style.display = "none";
            document.getElementById('check3').style.display = "none";
            document.getElementById('check4').style.display = "block";
        }
        else
        {
            document.getElementById('check2').style.display = "none";
            document.getElementById('check3').style.display = "none";
            document.getElementById('check4').style.display = "none";

        }

    }

</script>
