 <script>
//function showimage(){};
function getdisc()
{
        if(document.phdform.dept1.value=="Department of Electrical Engineering")
        {
            document.getElementById('divdisc12').style.display = "none";
            document.getElementById('divdisc11').style.display = "block";
        }
        else if(document.phdform.dept1.value=="Department of Mechanical Engineering")
        {
            document.getElementById('divdisc11').style.display = "none";
            document.getElementById('divdisc12').style.display = "block";
        }
        else
        {
            document.getElementById('divdisc11').style.display = "none";
            document.getElementById('divdisc12').style.display = "none";

        }
}

function choicedept2()
{
        if(document.phdform.choice_dept2.value=="Yes")
        {
            document.getElementById('divdept2').style.display = "block";
        }
        else
        {
            document.getElementById('divdept2').style.display = "none";
        }
}
function getdisc2()
{
        if(document.phdform.dept2.value=="Department of Electrical Engineering")
        {
            document.getElementById('divdisc22').style.display = "none";
            document.getElementById('divdisc21').style.display = "block";
        }
        else if(document.phdform.dept2.value=="Department of Mechanical Engineering")
        {
            document.getElementById('divdisc21').style.display = "none";
            document.getElementById('divdisc22').style.display = "block";
        }
        else
        {
            document.getElementById('divdisc21').style.display = "none";
            document.getElementById('divdisc22').style.display = "none";

        }
}
function choicedept3()
{
        if(document.phdform.choice_dept3.value=="Yes")
        {
            document.getElementById('divdept3').style.display = "block";
        }
        else
        {
            document.getElementById('divdept3').style.display = "none";
        }
}
function getdisc3()
{
        if(document.phdform.dept3.value=="Department of Electrical Engineering")
        {
            document.getElementById('divdisc32').style.display = "none";
            document.getElementById('divdisc31').style.display = "block";
        }
        else if(document.phdform.dept3.value=="Department of Mechanical Engineering")
        {
            document.getElementById('divdisc31').style.display = "none";
            document.getElementById('divdisc32').style.display = "block";
        }
        else
        {
            document.getElementById('divdisc31').style.display = "none";
            document.getElementById('divdisc32').style.display = "none";

        }
}

